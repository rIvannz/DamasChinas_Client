<Window x:Class="DamasChinas_Client.UI.PopUps.FriendRequestSent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Title="{DynamicResource friendRequestSentTitle}">

    <Grid>
        <Border Background="#66000000"/>

        <Border Background="#80222222"
                CornerRadius="14"
                Padding="24"
                Margin="20">

            <StackPanel>

                <Image x:Name="StatusIcon"
                       Width="70" Height="70"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,14"/>

                <TextBlock x:Name="StatusMessage"
                           Foreground="White"
                           FontSize="16"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button Width="120"
                        Height="32"
                        Style="{DynamicResource BaseGameButton}"
                        Content="{DynamicResource ok}"
                        HorizontalAlignment="Center"
                        Click="OnOkClick"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>


