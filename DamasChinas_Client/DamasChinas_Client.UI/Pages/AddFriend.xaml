<Page x:Class="DamasChinas_Client.UI.Pages.AddFriend"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource SurfaceBrush}">

    <Grid>

        <!-- Fondo madera -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Backgrounds/board-background.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <Rectangle Fill="#66000000"/>

        <!-- Contenedor centrado -->
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">

            <Border Background="#80222222"
                    CornerRadius="14"
                    Padding="24"
                    Width="420">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <TextBlock Grid.Row="0"
                               Text="{DynamicResource addFriend}"
                               Foreground="White"
                               FontSize="26"
                               TextAlignment="Center"
                               Margin="0,0,0,16"
                               FontFamily="pack://application:,,,/DamasChinas_Client.UI;component/Assets/Fonts/#Oups"/>

                    <!-- Username -->
                    <TextBox x:Name="txtFriendUsername"
                             Grid.Row="1"
                             Height="32"
                             Padding="8,3"
                             Background="#222"
                             Foreground="White"
                             BorderBrush="#666"
                             Margin="0,0,0,8"/>

                    <!-- Instrucción -->
                    <TextBlock Grid.Row="2"
                               Text="{DynamicResource fillFields}"
                               Foreground="LightGray"
                               FontSize="12"
                               Margin="0,0,0,16"/>

                    <!-- Botones -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">

                        <Button Width="110"
                                Height="34"
                                Style="{DynamicResource BaseGameButton}"
                                Margin="0,0,10,0"
                                Content="{DynamicResource cancel}"
                                Click="OnCancelClick"/>

                        <Button Width="140"
                                Height="34"
                                Style="{DynamicResource BaseGameButton}"
                                Content="{DynamicResource send}"
                                Click="OnSendClick"/>

                    </StackPanel>
                </Grid>

            </Border>
        </Grid>
    </Grid>
</Page>


